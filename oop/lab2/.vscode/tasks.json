{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "javac build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "${workspaceFolder}/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$javac"
            ],
            "detail": "Compile all top-level Java files into bin/"
        }
    ]
}
